{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist"],
    "references": [
        {
            "path": "./packages/test"
        }
    ]
}
