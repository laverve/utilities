{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "command": {
        "version": {
            "commitHooks": false,
            "conventionalCommits": true,
            "ignoreChanges": [
                "**/.github/**",
                "**/.husky/**",
                "**/.vscode/**",
                "**/apps/**",
                ".envrc",
                ".gitignore",
                ".npmrc",
                ".nvmrc",
                ".prettierrc.json",
                "lerna.json",
                "lint-stageed.config.json",
                "package-lock.json",
                "package.json",
                "README.md",
                "tsconfig.build.json",
                "tsconfig.eslint.json",
                "tsconfig.json",
                "**/*.spec.ts"
            ]
        }
    },
    "version": "5.1.16"
}
